{
  "search.exclude": {
    "**/.next": true
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "i18n-ally.localesPaths": ["locales"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.enabledFrameworks": ["custom"],
  "i18n-ally.translate.openai.apiModel": "gpt-4o-mini",
  "i18n-ally.autoDetection": true,
  "i18n-ally.extract.autoDetect": true,
  "editor.accessibilitySupport": "off",
  "i18n-ally.extract.parsers.html": {
    "attributes": [
      "text",
      "title",
      "alt",
      "placeholder",
      "label",
      "aria-label"
    ],
    "ignoredTags": ["script", "style"],
    "vBind": true,
    "inlineText": true
  },
  "editor.codeActionsOnSave": {
    "source.removeUnusedImports": "explicit",
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "typescript.preferences.autoImportFileExcludePatterns": ["@/components/*"],
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [88],
    "editor.wordWrapColumn": 88,
    "editor.wordWrap": "wordWrapColumn"
  },
  "python.analysis.autoImportCompletions": true,
  "python.analysis.extraPaths": ["${workspaceFolder}/python/lipsync"]
}
